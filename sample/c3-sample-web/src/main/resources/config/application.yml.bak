info:
  app_name: c3::base::core
  app_version: 1.0.0
  #node: 10

server:
  port: 8088

spring:
  #resources:
   #cachePeriod: -1
  #mvc:
    #date-format: yyyy-MM-dd HH:mm:ss
  #messages:
    #basename: i18n/locales
  #data:
    #page_start_with_zero: true  
  freemarker:
    suffix: .html
    #charset: UTF-8
    #content-type: text/html
    exposeRequestAttributes: true
    exposeSpringMacroHelpers: true
    requestContextAttribute: requestContext
    settings:
      number_format: "0.##"
      template_update_delay: 5
      #let freemarker can use [] tag_syntax
      #tag_syntax: square_bracket #tag_syntax = square_bracket||auto_detect
      classic_compatible: true
      #template_exception_handler: ignore
      auto_import: /spring.ftl as spring, /macro/common.ftl as common, /macro/layout.ftl as layout
  datasource:
    #type: com.alibaba.druid.pool.DruidDataSource
    driverClassName: org.postgresql.Driver
    url: jdbc:postgresql://localhost:5432/demo
    username: postgres  
    password: root
    initialSize: 1
    maxActive: 30
    minIdle: 1
    timeBetweenEvictionRunsMillis: 60000
    minEvictableIdleTimeMillis: 300000
    testWhileIdle: true
    testOnBorrow: false
    testOnReturn: false
    poolPreparedStatements: true
    maxPoolPreparedStatementPerConnectionSize: 20
    validationQuery: SELECT 1
    filters: stat
    removeAbandoned: true
    removeAbandonedTimeout: 1800
    logAbandoned: true
  jpa:
    database_platform: org.hibernate.dialect.PostgreSQL9Dialect
    database: POSTGRESQL
    show_sql: true
    # generate_ddl: false
    hibernate:
      ddl_auto: none
      naming_strategy: org.hibernate.cfg.EJB3NamingStrategy
    properties:
      hibernate.format_sql: true
    #   hibernate.cache.use_second_level_cache: true
    #   hibernate.cache.use_query_cache: false
    #   hibernate.generate_statistics: false
    #   hibernate.cache.region.f
  
#shiro:
  #enabled: true
  #encrypt:
    #hashAlgorithmName: MD5
  #sessionManager:
    #sessionIdCookie:
      #name: c3_session
  #filter:
    #loginUrl: /login
  #realm：
    #userDefinitions：admin
    #roleDefinitions：admin, super

logging:
  #path: /var/log
  file: logs/application.log
  level:
    ROOT: WARN
    org.springframework.boot: WARN
    org.springframework.web: DEBUG
    org.hibernate: ERROR
    com.c3.base: INFO
     
fileUpload:
  rootPath: d:/c3
  relativePath: /attachment/${yyyy}/${MM}/${dd}/